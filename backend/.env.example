# Puerto del servidor
PORT=3000

# Configuración de Contentful
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token

# Configuración de Idealista (LEGACY - API)
IDEALISTA_CLIENT_ID=your_idealista_client_id
IDEALISTA_CLIENT_SECRET=your_idealista_client_secret
IDEALISTA_ENVIRONMENT=production

# Configuración de Idealista FTP (NUEVO SISTEMA)
IDEALISTA_FTP_HOST=ftp.habitania.com
IDEALISTA_FTP_USER=es1
IDEALISTA_FTP_PASSWORD=J7M
IDEALISTA_FTP_PORT=21

# Configuración de Cron Job para Idealista
IDEALISTA_CRON_ENABLED=true
IDEALISTA_CRON_SCHEDULE=0 6 * * *

# Configuración de Mailchimp
# API Key de tu cuenta de Mailchimp (formato: xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-us1)
MAILCHIMP_API_KEY=your_mailchimp_api_key

# Prefijo del servidor de Mailchimp (ej: us1, us2, us3, etc.)
# Se encuentra al final de tu API Key después del guión
MAILCHIMP_SERVER_PREFIX=us1

# ID de la lista de Mailchimp donde se suscribirán los usuarios
# Puedes encontrarlo en tu dashboard de Mailchimp > Audience > Settings > Unique id
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# Configuración de PandaIDX
# API Key de tu cuenta de PandaIDX
PANDAIDX_API_KEY=your_pandaidx_api_key

# URL base de la API de PandaIDX
# Sandbox: https://api-sandbox.pandaidx.com
# Producción: https://api.pandaidx.com
PANDAIDX_BASE_URL=https://api.pandaidx.com

# Configuración de Redis (si se usa)
REDIS_URL=redis://localhost:6379